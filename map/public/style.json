{
  "version": 8,
  "name": "OpenOrthoMap Base Style",
  "metadata": {"maputnik:renderer": "mlgljs"},
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "minzoom": 0,
      "maxzoom": 18,
      "tileSize": 256,
      "attribution": "<a target=\"_blank\" href=\"https://www.openstreetmap.org/copyright\">Â© OpenStreetMap</a>"
    },
    "index": {
      "type": "vector",
      "url": "oom-files:///api/v1/index/tiles.json"
    }
  },
  "sprite": "",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {"id": "background", "type": "background"},
    {"id": "osm", "type": "raster", "source": "osm"},
    {"id": "index/outline", "type": "line", "source": "index", "source-layer": "index", "paint": {"line-color": "#000000", "line-opacity": 1.0}},
    {"id": "index/fill", "type": "fill", "source": "index", "source-layer": "index", "paint": {"fill-color": "#ff0000", "fill-opacity": 0.5}}
  ],
  "id": "openorthomap-base"
}
